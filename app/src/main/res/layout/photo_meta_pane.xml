<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/meta_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.Guideline
        android:id="@+id/vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical" />

    <ImageView
        android:src="@drawable/ic_aspect_ratio_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/res_image" />

    <TextView
        android:id="@+id/meta_res_tv"
        tools:text="5472 x 3648"
        android:textColor="#424242"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/res_image"
        app:layout_constraintLeft_toRightOf="@+id/res_image"
        app:layout_constraintBottom_toBottomOf="@+id/res_image"
         />

    <ImageView
        android:src="@drawable/ic_color_lens_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/res_image"
        app:layout_constraintLeft_toLeftOf="@+id/res_image"
        android:id="@+id/color_image" />

    <TextView
        tools:text="#543265"
        android:id="@+id/meta_color_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#424242"
        app:layout_constraintTop_toTopOf="@+id/color_image"
        app:layout_constraintLeft_toRightOf="@+id/color_image"
        app:layout_constraintBottom_toBottomOf="@+id/color_image"
        />

    <ImageView
        android:src="@drawable/ic_location_on_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/color_image"
        app:layout_constraintLeft_toLeftOf="@+id/color_image"
        android:id="@+id/location_image" />

    <TextView
        tools:text="Santa Barbara, United States"
        android:id="@+id/meta_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#424242"
        android:maxEms="7"
        app:layout_constraintTop_toTopOf="@+id/location_image"
        app:layout_constraintLeft_toRightOf="@+id/location_image"
        app:layout_constraintBottom_toBottomOf="@+id/location_image"
        />

    <ImageView
        android:src="@drawable/ic_camera_alt_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/location_image"
        app:layout_constraintLeft_toLeftOf="@+id/location_image"
        android:id="@+id/camera_image" />

    <TextView
        tools:text="Canon EOS"
        android:maxEms="7"
        android:id="@+id/meta_camera_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#424242"
        app:layout_constraintTop_toTopOf="@+id/camera_image"
        app:layout_constraintLeft_toRightOf="@+id/camera_image"
        app:layout_constraintBottom_toBottomOf="@+id/camera_image"
        />

    <ImageView
        android:src="@drawable/ic_timelapse_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_guideline"
        android:id="@+id/exposure_time_iv" />

    <TextView
        android:id="@+id/meta_exposure_tv"
        tools:text="1/4000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#424242"
        app:layout_constraintTop_toTopOf="@+id/exposure_time_iv"
        app:layout_constraintLeft_toRightOf="@+id/exposure_time_iv"
        app:layout_constraintBottom_toBottomOf="@+id/exposure_time_iv"
        />

    <ImageView
        android:src="@drawable/ic_camera_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/exposure_time_iv"
        app:layout_constraintLeft_toLeftOf="@+id/exposure_time_iv"
        android:id="@+id/aperture_iv" />

    <TextView
        android:id="@+id/meta_aperture_tv"
        tools:text="1/2.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#424242"
        app:layout_constraintTop_toTopOf="@+id/aperture_iv"
        app:layout_constraintLeft_toRightOf="@+id/aperture_iv"
        app:layout_constraintBottom_toBottomOf="@+id/aperture_iv"
        />

    <ImageView
        android:src="@drawable/ic_blur_circular_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/aperture_iv"
        app:layout_constraintLeft_toLeftOf="@+id/aperture_iv"
        android:id="@+id/focal_iv" />

    <TextView
        android:id="@+id/meta_focal_tv"
        tools:text="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#424242"
        app:layout_constraintTop_toTopOf="@+id/focal_iv"
        app:layout_constraintLeft_toRightOf="@+id/focal_iv"
        app:layout_constraintBottom_toBottomOf="@+id/focal_iv"
        />

    <ImageView
        android:src="@drawable/ic_iso_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/focal_iv"
        app:layout_constraintLeft_toLeftOf="@+id/focal_iv"
        android:id="@+id/iso_iv" />

    <TextView
        android:id="@+id/meta_iso_tv"
        tools:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#424242"
        app:layout_constraintTop_toTopOf="@+id/iso_iv"
        app:layout_constraintLeft_toRightOf="@+id/iso_iv"
        app:layout_constraintBottom_toBottomOf="@+id/iso_iv"
        />

    <ProgressBar
        android:id="@+id/meta_pb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_item_iv"
            android:transitionName="@string/transition_shared_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <com.sackcentury.shinebuttonlib.ShineButton
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/item_action_like"
            app:btn_color="@android:color/white"
            app:btn_fill_color="@color/heart_color"
            app:allow_random_color="false"
            app:siShape="@raw/ic_favorite_border"/>

        <com.sackcentury.shinebuttonlib.ShineButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="56dp"
            android:id="@+id/item_action_collection"
            app:allow_random_color="false"
            app:siShape="@raw/ic_star_border"
            app:btn_color="@android:color/white"
            app:btn_fill_color="@color/star_color"
            />

        <FrameLayout
            android:id="@+id/image_item_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/galleryItemOverlay" />

    </FrameLayout>


</android.support.v7.widget.CardView>